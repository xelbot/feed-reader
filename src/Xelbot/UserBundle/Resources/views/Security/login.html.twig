{% extends '::base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="login-form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <input type="text" name="_username" class="form-control" value="{{ lastUsername }}" placeholder="username">

        <input type="password" name="_password" class="form-control" placeholder="password"/>

        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
        <label for="remember_me">Remember Me</label>

        <button class="btn btn-primary" type="submit">Login</button>
    </form>
{% endblock %}
