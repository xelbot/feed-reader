{% extends 'AppBundle::base.html.twig' %}
{% block title %}{{ 'Login'|trans }}{% endblock %}
{% block content %}
    <div class="static-page">
        <h1>{{ 'Login'|trans }}</h1>
        <p>Please fill out the following fields to login:</p>
        <div class="row">
            <div class="col-lg-6">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <form action="{{ path('login') }}" method="post" class="login-form">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                    <div class="form-group">
                        <input type="text" name="_username" class="form-control" value="{{ lastUsername }}"
                               placeholder="username">
                    </div>

                    <div class="form-group">
                        <input type="password" name="_password" class="form-control" placeholder="password"/>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                        <label for="remember_me">Remember Me</label>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
